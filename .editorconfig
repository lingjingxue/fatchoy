# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.{proto,yml,yaml,json}]
indent_size = 2
